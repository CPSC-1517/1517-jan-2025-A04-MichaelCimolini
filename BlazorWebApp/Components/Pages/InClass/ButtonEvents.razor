</blockquote>

<p>@WelcomeMsg</p>

<button type="submit" @onclick="Reset">Reset</button>

<label for="inputcontrol">Enter an H for heads or T for Tails:</label>
<input type="text" id="inputcontrol" placeholder="eg: H" @bind="InputValue"/>
